@model Tuple<emlakkkk.Models.users, List<emlakkkk.Models.products>, List<emlakkkk.Models.images>, List<emlakkkk.Models.products>>
@using emlakkkk.Helper;
@{
    ViewBag.Title = "MemberSingle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Agent Single Grid View -->
<section class="our-agent-single bgc-f7 pb30-991">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb_content style2 mt30-767 mb30-767">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Anasayfa</a></li>
                                <li class="breadcrumb-item active text-thm" aria-current="page">Kayıtlı</li>
                            </ol>
                            <h2 class="breadcrumb_title">@Model.Item1.name @Model.Item1.surname.ToUpper()</h2>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="feat_property list style2 agent">
                            <div class="thumb" style="width:240px">
                                <img class="img-whp" style="width:260px" src="~/Content/uploads/avatar/@(Model.Item1.avatarSource != null ? @Model.Item1.avatarSource : "User-01.png")" alt="@Model.Item1.name @Model.Item1.surname.ToUpper()">
                                <div class="thmb_cntnt">
                                    <ul class="tag mb0">
                                        <li class="list-inline-item dn"></li>
                                        <li class="list-inline-item"><a href="#">@Model.Item1.products.Count() yayın</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="details">
                                <div class="tc_content">
                                    <h4>@Model.Item1.name @Model.Item1.surname.ToUpper()</h4>
                                    <p class="text-thm">@Model.Item1.type </p>
                                    <ul class="prop_details mb0">
                                        <li><a href="tel:@Model.Item1.phone">Tel: @Model.Item1.phone</a></li>
                                        <li><a href="mailto:@Model.Item1.mail">Mail: @Model.Item1.mail</a></li>
                                    </ul>
                                </div>
                                <div class="fp_footer">
                                    <ul class="fp_meta float-left mb0">
                                        <li @(@Model.Item1.socialFacebook == null ? "hidden" : "") class="list-inline-item"><a target="_blank" href="@Model.Item1.socialFacebook"><i class="fa fa-facebook"></i></a></li>
                                        <li @(@Model.Item1.socialTwitter == null ? "hidden" : "") class="list-inline-item"><a target="_blank" href="@Model.Item1.socialTwitter"><i class="fa fa-twitter"></i></a></li>
                                        <li @(@Model.Item1.socialInstagram == null ? "hidden" : "") class="list-inline-item"><a target="_blank" href="https://www.instagram.com/@Model.Item1.socialInstagram/"><i class="fa fa-instagram"></i></a></li>
                                        <li @(@Model.Item1.socialPinterest == null ? "hidden" : "") class="list-inline-item"><a target="_blank" href="@Model.Item1.socialPinterest"><i class="fa fa-pinterest"></i></a></li>
                                        <li @(@Model.Item1.socialLinkedin == null ? "hidden" : "") class="list-inline-item"><a target="_blank" href="@Model.Item1.socialLinkedin"><i class="fa fa-linkedin"></i></a></li>
                                        <li @(@Model.Item1.socialYoutube == null ? "hidden" : "") class="list-inline-item"><a target="_blank" href="@Model.Item1.socialYoutube"><i class="fa fa-youtube"></i></a></li>
                                        <li @(@Model.Item1.socialSkype == null ? "hidden" : "") class="list-inline-item"><a target="_blank" href="@Model.Item1.socialSkype"><i class="fa fa-skype"></i></a></li>
                                        <li @(@Model.Item1.socialWebsite == null ? "hidden" : "") class="list-inline-item"><a target="_blank" href="@Model.Item1.socialWebsite"><i class="fa fa-link"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="shop_single_tab_content style2 mt30">
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="description-tab" data-toggle="tab" href="#description" role="tab" aria-controls="description" aria-selected="true">Hakkında</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="listing-tab" data-toggle="tab" href="#listing" role="tab" aria-controls="listing" aria-selected="false">İlanları</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="review-tab" data-toggle="tab" href="#review" role="tab" aria-controls="review" aria-selected="false">Yorumları</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="myTabContent2">
                                <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                                    <div class="product_single_content">
                                        <div class="mbp_pagination_comments">
                                            <div class="mbp_first media">
                                                <div class="media-body">
                                                    <p class="mb25">@Model.Item1.about</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade row pl15 pl0-1199 pr15 pr0-1199" id="listing" role="tabpanel" aria-labelledby="listing-tab">
                                    @foreach (var item in Model.Item2)
                                    {
                                        <div class="col-lg-12">
                                            <div class="feat_property list style2 hvr-bxshd bdrrn mb10">
                                                <div class="thumb">
                                                    @foreach (var imagee in Model.Item3.Where(w=>w.productId == item.productId).Take(1))
                                                    {
                                                        <img class="img-whp" style="max-width:364px;max-height:220px" src="~/Content/uploads/images/@imagee.imageSource" alt="@item.productName">
                                                    }
                                                </div>
                                                <div class="details">
                                                    <div class="tc_content">
                                                        <div class="dtls_headr">
                                                            <ul class="tag">
                                                                <li style="background-color:@(@item.type == "Satılık" ? "darkcyan" : "cornflowerblue")" class="list-inline-item"><a href="#">@item.type</a></li>
                                                                <li style="background-color:#FF5A5F" class="list-inline-item"><a href="#">@item.counties.provinces.provinceName</a></li>
                                                            </ul>
                                                            <a class="fp_price" href="@Url.Action("ListingSingle","Home", new {category = @Url.FriendlyURLTitle(item.categories.categoryName), baslik = @Url.FriendlyURLTitle(@item.productName), id = @item.productId})">@item.price<small>/TL</small></a>
                                                        </div>
                                                        <a href="@Url.Action("ListingSingle","Home", new {category = @Url.FriendlyURLTitle(item.categories.categoryName), baslik = @Url.FriendlyURLTitle(@item.productName), id = @item.productId})"><p class="text-thm">@item.categories.categoryName</p></a>
                                                        <a href="@Url.Action("ListingSingle","Home", new {category = @Url.FriendlyURLTitle(item.categories.categoryName), baslik = @Url.FriendlyURLTitle(@item.productName), id = @item.productId})"><h4>@item.productName</h4></a>
                                                        <a href="@Url.Action("ListingSingle","Home", new {category = @Url.FriendlyURLTitle(item.categories.categoryName), baslik = @Url.FriendlyURLTitle(@item.productName), id = @item.productId})"><p><span class="flaticon-placeholder"></span> @item.countryName @item.counties.provinces.provinceName @item.counties.countyName</p></a><br />
                                                    </div>
                                                    <div class="fp_footer">
                                                        <ul class="fp_meta float-left mb0">
                                                            <li class="list-inline-item"><a href="@Url.Action("MemberSingle","Home", new {ad = @Url.FriendlyURLTitle(item.users.name), soyad = @Url.FriendlyURLTitle(item.users.surname), id = @item.users.userId})"><img style="width:45px;height:45px;border-radius:50px 50px" src="~/Content/uploads/avatar/@(item.users.avatarSource != null ? @item.users.avatarSource : "User-01.png")" alt="@item.users.name @item.users.surname.ToUpper()"></a></li>
                                                            <li class="list-inline-item"><a href="@Url.Action("MemberSingle","Home", new {ad = @Url.FriendlyURLTitle(item.users.name), soyad = @Url.FriendlyURLTitle(item.users.surname), id = @item.users.userId})">@item.users.name @item.users.surname.ToUpper()</a></li>
                                                        </ul>
                                                        <div class="fp_pdate float-right">@String.Format("{0:d  MMMM dddd}", @item.releaseDate)</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="tab-pane fade" id="review" role="tabpanel" aria-labelledby="review-tab">
                                    <div class="product_single_content">
                                        <div class="mbp_pagination_comments">
                                            <ul class="total_reivew_view">
                                                <li class="list-inline-item sub_titles">896 Reviews</li>
                                                <li class="list-inline-item">
                                                    <ul class="star_list">
                                                        <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                        <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                        <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                        <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                        <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                    </ul>
                                                </li>
                                                <li class="list-inline-item avrg_review">( 4.5 out of 5 )</li>
                                                <li class="list-inline-item write_review">Write a Review</li>
                                            </ul>
                                            <div class="mbp_first media">
                                                <img src="~/Content/images/testimonial/1.png" class="mr-3" alt="1.png">
                                                <div class="media-body">
                                                    <h4 class="sub_title mt-0">
                                                        Diana Cooper
                                                        <div class="sspd_review dif">
                                                            <ul class="ml10">
                                                                <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                                <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                                <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                                <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                                <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                                <li class="list-inline-item"></li>
                                                            </ul>
                                                        </div>
                                                    </h4>
                                                    <a class="sspd_postdate fz14" href="#">December 28, 2020</a>
                                                    <p class="mt10">Beautiful home, very picturesque and close to everything in jtree! A little warm for a hot weekend, but would love to come back during the cooler seasons!</p>
                                                </div>
                                            </div>
                                            <div class="custom_hr"></div>
                                            <div class="mbp_first media">
                                                <img src="~/Content/images/testimonial/2.png" class="mr-3" alt="2.png">
                                                <div class="media-body">
                                                    <h4 class="sub_title mt-0">
                                                        Ali Tufan
                                                        <div class="sspd_review dif">
                                                            <ul class="ml10">
                                                                <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                                <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                                <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                                <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                                <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                                <li class="list-inline-item"></li>
                                                            </ul>
                                                        </div>
                                                    </h4>
                                                    <a class="sspd_postdate fz14" href="#">December 28, 2020</a>
                                                    <p class="mt10">Beautiful home, very picturesque and close to everything in jtree! A little warm for a hot weekend, but would love to come back during the cooler seasons!</p>
                                                </div>
                                            </div>
                                            <div class="custom_hr"></div>
                                            <div class="mbp_comment_form style2">
                                                <h4>Write a Review</h4>
                                                <ul class="sspd_review">
                                                    <li class="list-inline-item">
                                                        <ul class="mb0">
                                                            <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                            <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                            <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                            <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                            <li class="list-inline-item"><a href="#"><i class="fa fa-star"></i></a></li>
                                                        </ul>
                                                    </li>
                                                    <li class="list-inline-item review_rating_para">Your Rating & Review</li>
                                                </ul>
                                                <form class="comments_form">
                                                    <div class="form-group">
                                                        <input type="text" class="form-control" id="exampleInputName1" aria-describedby="textHelp" placeholder="Review Title">
                                                    </div>
                                                    <div class="form-group">
                                                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="12" placeholder="Your Review"></textarea>
                                                    </div>
                                                    <button type="submit" class="btn btn-thm">Submit Review <span class="flaticon-right-arrow-1"></span></button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-xl-4">
                <div class="sidebar_listing_grid1 dn-991">
                    <div class="sidebar_listing_list">
                        <div class="sidebar_advanced_search_widget">
                            <h4 class="mb25">@Model.Item1.name @Model.Item1.surname.ToUpper() ile iletişime geç</h4>
                            @using (Html.BeginForm("MessageDetail", "User", FormMethod.Post))
                            {
                                <ul class="sasw_list mb0">
                                    <li class="search_area">
                                        <div class="form-group">
                                            <input hidden name="kime" value="@Model.Item1.userId" />
                                            <textarea type="text" name="messaceContent" class="form-control" id="exampleInputName1" placeholder="Mesajın" required aria-required="true"></textarea>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="search_option_button">
                                            <button type="submit" class="btn btn-block btn-thm">Gönder</button>
                                        </div>
                                    </li>
                                </ul>
                            }
                        </div>
                    </div>
                    <div class="sidebar_feature_listing">
                        <h4 class="title">Son İlanlar</h4>
                        @foreach (var item in Model.Item4)
                        {
                            <div class="media">
                                @foreach (var imagee2 in (ViewBag.gorseller as List<emlakkkk.Models.images>).Where(w=>w.productId == item.productId).Take(1))
                                {
                                    <a href="@Url.Action("ListingSingle","Home", new {category = @Url.FriendlyURLTitle(item.categories.categoryName), baslik = @Url.FriendlyURLTitle(@item.productName), id = @item.productId})"><img class="align-self-start mr-3" style="height:80px;width:90px;border-radius:10px 10px" src="~/Content/uploads/images/@imagee2.imageSource" alt="@item.productName"></a>
                                }
                                <div class="media-body">
                                    <a href="@Url.Action("ListingSingle","Home", new {category = @Url.FriendlyURLTitle(item.categories.categoryName), baslik = @Url.FriendlyURLTitle(@item.productName), id = @item.productId})"><h5 class="mt-0 post_title">@item.productName</h5></a>
                                    <a href="@Url.Action("ListingSingle","Home", new {category = @Url.FriendlyURLTitle(item.categories.categoryName), baslik = @Url.FriendlyURLTitle(@item.productName), id = @item.productId})">@item.price<small>/TL</small></a>
                                    <ul class="mb0">
                                        <li class="list-inline-item"><strong>@item.counties.provinces.provinceName</strong></li>
                                        <li class="list-inline-item">@item.categories.categoryName</li>
                                        <li class="list-inline-item"><strong>@item.type</strong></li>
                                    </ul>
                                </div>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



